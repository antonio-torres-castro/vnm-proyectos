{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-frontend",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*webpack.*",
                    "endsPattern": "^.*compiled.*successfully.*"
                }
            }
        },
        {
            "label": "start-backend-dependencies",
            "type": "shell",
            "command": "python",
            "args": ["devtools/orquestador_desarrollo.py", "iniciar"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Iniciando entorno de desarrollo",
                    "endsPattern": "Entorno iniciado correctamente"
                }
            }
        },
        {
            "label": "start-fullstack-environment",
            "type": "shell",
            "command": "python",
            "args": ["devtools/orquestador_desarrollo.py", "iniciar"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Iniciando.*",
                    "endsPattern": ".*iniciado.*|.*ready.*|.*running.*"
                }
            }
        },
        {
            "label": "stop-environment",
            "type": "shell",
            "command": "python",
            "args": ["devtools/orquestador_desarrollo.py", "detener"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "install-frontend-dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        },
        {
            "label": "install-backend-dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build"
        }
    ]
}