{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Frontend Debug",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "/src/*": "${webRoot}/*",
                "/*": "*",
                "/./~/*": "${workspaceFolder}/frontend/node_modules/*"
            },
            "userDataDir": false,
            "runtimeExecutable": "stable"
        },
        {
            "name": "Backend Debug",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        },
        {
            "name": "Frontend Debug - Compound",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMapPathOverrides": {
                "/src/*": "${workspaceFolder}/frontend/src/*",
                "/*": "*",
                "/./~/*": "${workspaceFolder}/frontend/node_modules/*"
            },
            "userDataDir": false,
            "runtimeExecutable": "stable"
        },
        {
            "name": "FullStack Debug - Ambos simult√°neamente",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "start-fullstack-environment"
        }
    ],
    "compounds": [
        {
            "name": "FullStack Debug - Compound",
            "configurations": [
                "Backend Debug", 
                "Frontend Debug - Compound"
            ],
            "stopAll": true,
            "preLaunchTask": "start-fullstack-environment"
        }
    ]
}