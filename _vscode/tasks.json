{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-frontend",
            "type": "shell",
            "command": "npm",
            "args": ["start"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "owner": "webpack",
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*webpack.*",
                    "endsPattern": "^.*compiled.*successfully.*"
                }
            }
        },
        {
            "label": "start-backend-dependencies",
            "type": "shell",
            "command": "python",
            "args": ["devtools/orquestador_desarrollo.py", "iniciar"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Iniciando entorno de desarrollo",
                    "endsPattern": "Entorno iniciado correctamente"
                }
            }
        },
        {
            "label": "start-fullstack-environment",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.debug.yml", "up", "-d"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Creating.*|.*Starting.*|.*Pulling.*",
                    "endsPattern": ".*done.*"
                }
            },
            "dependsOrder": "sequence",
            "dependsOn": "wait-for-services"
        },
        {
            "label": "wait-for-services",
            "type": "shell",
            "command": "timeout",
            "args": ["60", "bash", "-c", "while ! curl -s http://localhost:8000/health > /dev/null 2>&1; do echo 'Waiting for backend...'; sleep 2; done && echo 'Backend ready!'"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "windows": {
                "command": "powershell",
                "args": ["-Command", "$timeout = 60; $count = 0; do { Start-Sleep -Seconds 2; $count += 2; try { $response = Invoke-WebRequest -Uri 'http://localhost:8000/health' -UseBasicParsing -TimeoutSec 5; if ($response.StatusCode -eq 200) { Write-Host 'Backend ready!'; exit 0 } } catch { Write-Host 'Waiting for backend...' } } while ($count -lt $timeout); Write-Host 'Timeout waiting for backend'; exit 1"]
            }
        },
        {
            "label": "stop-environment",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.debug.yml", "down"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "install-frontend-dependencies",
            "type": "shell",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build"
        },
        {
            "label": "install-backend-dependencies",
            "type": "shell",
            "command": "pip",
            "args": ["install", "-r", "requirements.txt"],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "group": "build"
        }
    ]
}