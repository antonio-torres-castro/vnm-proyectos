{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üêç Backend: FastAPI Docker Debug",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false,
            "redirectOutput": true,
            "preLaunchTask": "Start Backend Debug Container"
        },
        {
            "name": "‚öõÔ∏è Frontend: React Edge Debug",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///./src/*": "${webRoot}/*",
                "webpack:///./*": "${workspaceFolder}/frontend/*",
                "webpack:////*": "*"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "smartStep": true,
            "showAsyncStacks": true,
            "preLaunchTask": "Start Frontend Dev Server"
        },
        {
            "name": "üöÄ Full Stack: Debug Both",
            "type": "compound",
            "configurations": [
                "üêç Backend: FastAPI Docker Debug",
                "‚öõÔ∏è Frontend: React Edge Debug"
            ],
            "stopAll": true
        },
        {
            "name": "üêç Backend: Local Python Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/start-debug.py",
            "args": ["--debug"],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "‚öõÔ∏è Frontend: Attach to Edge",
            "type": "msedge",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///./src/*": "${webRoot}/*",
                "webpack:///./*": "${workspaceFolder}/frontend/*",
                "webpack:////*": "*"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        },
        {
            "name": "üß™ Backend: Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "üß™ Frontend: Run Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/.bin/react-scripts",
            "args": ["test", "--watchAll=false"],
            "console": "integratedTerminal",
            "env": {
                "CI": "true"
            },
            "cwd": "${workspaceFolder}/frontend"
        }
    ]
}